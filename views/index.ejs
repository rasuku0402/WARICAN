<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>WARICAN</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">WARICAN</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>参加者リスト</h1>
        <a href="/new" class="new-button">+ 参加者登録</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span class="member-column">参加者</span>
          <span class="money-column">支払い金額</span>
        </div>
        <ul class="table-body">
          <% items.forEach((item) => { %>
            <li>
              <div class="item-data">
                <span class="id-column"><%= item.id %></span>
                <span class="member-column"><%= item.name %></span>
                <span class="money-column"><%= item.money %>円</span>
              </div>
              <div class="item-menu">
                <form action="/delete/<%= item.id %>" method="post" >
                  <input type="submit" value="削除" >
                </form>
                <a href="/edit/<%= item.id %>">編集</a>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
      <div class="total">
        <a href="/total">精算</a>
      </div>
    </div>
  </body>
</html>